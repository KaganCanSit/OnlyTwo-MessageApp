<Window x:Class="TinyCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TinyCalculator"
        mc:Ignorable="d"
        Title="Tiny Calculator" Height="150" Width="325">
    <Grid Margin="12">
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Input: "/>
                <TextBox Width="200" Text="{Binding Input}"/>
            </StackPanel>
            <Button Content="Calculate" Width="100" Margin="6" Command="{Binding CalculateCommand}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Result: "/>
                <TextBlock Background="Azure" Width="200px" Text="{Binding Result}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
